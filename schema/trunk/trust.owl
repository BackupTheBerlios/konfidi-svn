<!-- properties second -->

<owl:ObjectProperty rdf:ID="trustedAbout" rdfs:label="trustedAbout" 
	rdfs:comment="Relates things to trust items.">
	<!-- this domain allows anything to be trusted, even trust items themselves.  do we want to restrict this any further? -->
	<rdfs:domain rdf:resource="&owl;Thing" />
	<rdfs:range rdf:resource="#Item" />
	<rdfs:isDefinedBy rdf:resource="&trust;" />
</owl:ObjectProperty>

<owl:ObjectProperty rdf:ID="value" rdfs:label="value">
	<rdfs:isDefinedBy rdf:resource="&trust;" />
	<rdfs:domain rdf:resource="#Item" />
	<rdfs:range rdf:resource="&rdfs;Literal" rdf:datatype="&xsd;nonNegativeInteger" />
</owl:ObjectProperty>

<owl:ObjectProperty rdf:ID="subject" rdfs:label="subject">
	<rdfs:isDefinedBy rdf:resource="&trust;" />
	<rdfs:domain rdf:resource="#Item" />
	<rdfs:range rdf:resource="&owl;Thing" />
</owl:ObjectProperty>

